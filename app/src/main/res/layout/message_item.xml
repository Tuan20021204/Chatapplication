<!-- res/layout/message_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/text_message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_background"
        android:padding="10dp"
        android:text="Tin nhắn từ người khác"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:visibility="gone" />


    <TextView
        android:id="@+id/text_message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_background"
        android:padding="10dp"
        android:text="Tin nhắn của người dùng"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />
</RelativeLayout>
